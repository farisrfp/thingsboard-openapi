{
  "openapi": "3.1.0",
  "info": {
    "title": "ZenCool API",
    "description": "API for managing IoT air conditioning systems",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://zencool.enigmacamp.com/poc",
      "description": "Production server"
    }
  ],
  "security": [
    {
      "apiKey": []
    }
  ],
  "components": {
    "securitySchemes": {
      "apiKey": {
        "type": "apiKey",
        "name": "X-API-Key",
        "in": "header",
        "description": "API key for authentication"
      }
    },
    "schemas": {
      "PagingResponse": {
        "type": "object",
        "properties": {
          "page": {
            "type": "integer",
            "minimum": 1
          },
          "rowsPerPage": {
            "type": "integer",
            "minimum": 1
          },
          "totalPages": {
            "type": "integer",
            "minimum": 0
          },
          "totalRows": {
            "type": "integer",
            "minimum": 0
          }
        },
        "required": [
          "page",
          "rowsPerPage",
          "totalPages",
          "totalRows"
        ],
        "additionalProperties": false
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "status": {
            "const": "error"
          },
          "message": {
            "type": "string"
          },
          "code": {
            "type": "string"
          }
        },
        "required": [
          "status",
          "message",
          "code"
        ],
        "additionalProperties": false
      },
      "SuccessMessageResponse": {
        "type": "object",
        "properties": {
          "status": {
            "const": "success"
          },
          "result": {
            "type": "object",
            "properties": {
              "message": {
                "type": "string"
              }
            },
            "required": [
              "message"
            ]
          }
        },
        "required": [
          "status",
          "result"
        ],
        "additionalProperties": false
      },
      "StoreResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "city": {
            "type": "string"
          },
          "latitude": {
            "type": ["null", "string"]
          },
          "longitude": {
            "type": ["null", "string"]
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": [
          "id",
          "name",
          "address",
          "city"
        ],
        "additionalProperties": false
      },
      "StoreListResponse": {
        "type": "object",
        "properties": {
          "status": {
            "const": "success"
          },
          "result": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/StoreResponse"
            }
          },
          "paging": {
            "$ref": "#/components/schemas/PagingResponse"
          }
        },
        "required": [
          "status",
          "result"
        ]
      },
      "StoreDetailResponse": {
        "type": "object",
        "properties": {
          "status": {
            "const": "success"
          },
          "result": {
            "$ref": "#/components/schemas/StoreResponse"
          }
        },
        "required": [
          "status",
          "result"
        ]
      },
      "DeviceAssetResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "deviceId": {
            "type": "string",
            "format": "uuid"
          },
          "storeId": {
            "type": "string",
            "format": "uuid"
          },
          "podId": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "brand": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "powerConsumption": {
            "type": ["null", "integer"]
          },
          "serialNumber": {
            "type": ["null", "string"]
          }
        },
        "required": [
          "id",
          "deviceId",
          "storeId",
          "podId",
          "name"
        ],
        "additionalProperties": false
      },
      "MeasurementsResponse": {
        "type": ["object", "null"],
        "properties": {
          "temperature": {
            "type": ["number", "null"]
          },
          "humidity": {
            "type": ["number", "null"]
          },
          "feelsLike": {
            "type": ["number", "null"]
          },
          "rssi": {
            "type": ["integer", "null"]
          },
          "tvoc": {
            "type": ["integer", "null"]
          },
          "co2": {
            "type": ["integer", "null"]
          },
          "iaq": {
            "type": ["integer", "null"]
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "AcStateResponse": {
        "type": ["object", "null"],
        "properties": {
          "on": {
            "type": "boolean"
          },
          "mode": {
            "type": "string",
            "enum": [
              "cool",
              "heat",
              "fan",
              "dry",
              "auto"
            ]
          },
          "targetTemperature": {
            "type": ["integer", "null"],
            "minimum": 16,
            "maximum": 30
          },
          "temperatureUnit": {
            "type": "string",
            "enum": [
              "C",
              "F"
            ]
          },
          "fanLevel": {
            "type": "string",
            "enum": [
              "quiet",
              "low",
              "medium",
              "high",
              "auto"
            ]
          },
          "swing": {
            "type": "string",
            "enum": [
              "stopped",
              "rangeFull",
              "horizontal",
              "vertical"
            ]
          },
          "timestamp": {
            "type": ["string", "null"],
            "format": "date-time"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "PodResponse": {
        "type": "object",
        "properties": {
          "podId": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "roomName": {
            "type": "string"
          },
          "acState": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/AcStateResponse"
              },
              {
                "type": "null"
              }
            ]
          },
          "measurements": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/MeasurementsResponse"
              },
              {
                "type": "null"
              }
            ]
          },
          "connectionStatus": {
            "type": ["null", "object"],
            "properties": {
              "isAlive": {
                "type": "boolean"
              },
              "lastSeen": {
                "type": ["null", "string"],

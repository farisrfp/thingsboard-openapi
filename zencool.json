              }
            },
            "required": [
              "isAlive"
            ]
          }
        },
        "required": [
          "podId",
          "name",
          "roomName"
        ],
        "additionalProperties": false
      },
      "DeviceResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "storeId": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          },
          "store": {
            "$ref": "#/components/schemas/StoreResponse"
          },
          "assets": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DeviceAssetResponse"
            }
          },
          "pods": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PodResponse"
            }
          }
        },
        "required": [
          "id",
          "storeId",
          "name",
          "createdAt",
          "updatedAt"
        ],
        "additionalProperties": false
      },
      "DeviceListResponse": {
        "type": "object",
        "properties": {
          "status": {
            "const": "success"
          },
          "result": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DeviceResponse"
            }
          },
          "paging": {
            "$ref": "#/components/schemas/PagingResponse"
          }
        },
        "required": [
          "status",
          "result"
        ]
      },
      "DeviceDetailResponse": {
        "type": "object",
        "properties": {
          "status": {
            "const": "success"
          },
          "result": {
            "$ref": "#/components/schemas/DeviceResponse"
          }
        },
        "required": [
          "status",
          "result"
        ]
      },
      "HistoricalMeasurement": {
        "type": "object",
        "properties": {
          "sampleDate": {
            "type": "string",
            "format": "date-time"
          },
          "temperature": {
            "type": "number"
          },
          "humidity": {
            "type": "number"
          },
          "tvoc": {
            "type": "integer"
          },
          "co2": {
            "type": "integer"
          },
          "iaq": {
            "type": "integer"
          },
          "podId": {
            "type": "string"
          }
        },
        "required": [
          "sampleDate",
          "temperature",
          "humidity",
          "podId"
        ],
        "additionalProperties": false
      },
      "HistoricalMeasurementsResponse": {
        "type": "object",
        "properties": {
          "status": {
            "const": "success"
          },
          "result": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/HistoricalMeasurement"
            }
          }
        },
        "required": [
          "status",
          "result"
        ]
      },
      "AssetResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "deviceId": {
            "type": ["null", "string"],
            "format": "uuid"
          },
          "storeId": {
            "type": "string",
            "format": "uuid"
          },
          "podId": {
            "type": ["null", "string"]
          },
          "name": {
            "type": "string"
          },
          "brand": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "powerConsumption": {
            "type": ["null", "integer"]
          },
          "serialNumber": {
            "type": ["null", "string"]
          }
        },
        "required": [
          "id",
          "storeId",
          "name",
          "brand",
          "type"
        ],
        "additionalProperties": false
      },
      "AssetListResponse": {
        "type": "object",
        "properties": {
          "status": {
            "const": "success"
          },
          "result": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/AssetResponse"
